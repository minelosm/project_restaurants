    "print(df_sub.shape)\n",
    "df_sub.head()"
   ]
  },
  {
   "cell_type": "markdown",
   "id": "1188266f",
   "metadata": {},
   "source": [
    "## Pivot table"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "218415b2",
   "metadata": {},
   "outputs": [],
   "source": [
    "# Using pivot_table to reshape the data and calculate means \n",
    "pd.pivot_table(df_sub[['lat',\n",
    "                       'lon',\n",
    "                       'brand',\n",
    "                       'pop',\n",
    "                       'pop_dens',\n",
    "                       'frg_pct',\n",
    "                       'emp']],\n",
    "                index=['brand'],\n",
    "                values=['lat', 'lon', 'pop', 'pop_dens', 'frg_pct', 'emp'],\n",
    "                aggfunc=(np.mean, 'count')).round(0)"
   ]
  },
